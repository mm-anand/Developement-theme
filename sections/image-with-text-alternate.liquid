<div class="custom_image_with_text ">
  <div class='container'>
    <div class='image-text-wrapper {{ section.settings.image_position }}'>
      <div class='image-container'>
        <img src="{{ section.settings.image }}" alt="Custom Image" width="100%" height="auto">
      </div>
        <div class="text-container {% if section.settings.text_alignment %}{{ section.settings.text_alignment }}{% endif %}">
          {% if section.settings.text_container_tagline != blank  %}
            <div class='text_container_tagline'>{{ section.settings.text_container_tagline }}</div>
          {% endif %}
          {% if section.setting.text_container_title!= blank %}
            <div class="text_container_title">{{ section.setting.text_container_title }}</div>
          {% endif %}
          {% if section.setting.text_container_paragraph!= blank %}
            <div class="text_container_paragraph">{{ section.settings.text_container_paragraph }}</div>
          {% endif %}
          {% if section.settings.button!= blank %}
            <div class='text_container_btn'>
              <a class="button" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
            </div>
          {% endif %}

          
        </div>
      
    </div>
    
      </div>
</div>

{% style %}
  .custom_image_with_text{
    background:{{section.settings.section_background}};
    width:100%;
    height:100%;
  }
  .image-text-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:5px;
  }
  .right{
    flex-direction:row-reverse
  }
  .text-left{
    align-items:flex-start;
  }
  .text-right{
    align-items:flex-end;
  }
  .text-center{
    align-items:center;
  }
  .image-container{
    width:50%;
  }
  .text-container{
    width:50%;
    display:flex;
    flex-direction:column;
    background:{{section.settings.text_container_background}};
    color:{{section.settings.text_color}}
  }
  button{
    background:black;
    color:white;
    padding:5px;
  }
  
  
{% endstyle %}

{% schema %}
  {
    "name":"Custom Image Text Section",
    "tag":"section",
    "class":"homepage-section",
    "settings":[
      {
        "type":"color",
        "id":"section_background",
        "label":"Section Background",
        "default":"#c5c5c5"
        
      },
      {
        "type":"select",
        "id":"image_position",
        "label":"Image Position",
        "options":[
          {
            "value":"left",
            "label":"Left"
          },
          {
            "value":"right",
            "label":"Right"
          }
        ],
        "default":"left"
      },
      {
        "type":"image_picker",
        "label":"Image",
        "id":"image"
      },
      {
        "type":"text",
        "label":"Tagline",
        "id":"text_container_tagline",
        "placeholder":"Enter the tagline"
      },
      {
        "type":"text",
        "label":"Title",
        "id":"text_container_title",
        "placeholder":"Enter the title"
      },
      {
        "type":"textarea",
        "label":"Paragraph",
        "id":"text_container_paragraph"
      },
      {
        "type":"url",
        "label":"Button Link",
        "id":"button_link"
      },
      {
        "type":"text",
        "label":"Button Text",
        "id":"button_text"
      },
      {
      "type": "select",
      "label": "Text Alignment",
      "id": "text_alignment",
      "options": [
        { "value": "text-left", "label": "Left" },
        { "value": "text-center", "label": "Center" },
        { "value": "text-right", "label": "Right" }
      ],
        "default": "text-center"
    }
    ],
  "presets": [{
    "name": "Custom Image Text Section"
  }]
  }
{% endschema %}