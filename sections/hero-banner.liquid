{% liquid
assign desktopImage = section.blocks.settings.desktop_image
assign mobileImage = section.blocks.settings.mobile_image
assign heading = section.blocks.settings.heading
assign description = section.blocks.settings.description
assign buttonLink = section.blocks.settings.button_link
assign buttonText = section.blocks.settings.button_text

%}

{% assign timing = section.settings.change_slides_timing | times: 1000 %}

<link rel="stylesheet" href="{{'hero-banner.css' |  asset_url }}">

<script src="
https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js
"></script>
<link href="
https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css
" rel="stylesheet">
<style>
    .heading{
        color:{{blocks.settings.heading_text_color}};
    }
    .description {
        color:{{blocks.settings.description_text_color}}
    }
    .hero-banner-button{
        background-color: {{section.blocks.settings.button_bg}};
        color:{{section.blocks.settings.button_text_color}}
    }

</style>
<div class="{{section.settings.layout}}">
<section class="splide" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
        <ul class="splide__list">
            {% for block in section.blocks %}
            <div class="hero-banner-wrapper position-rel splide__slide">
                <div class="hero-image-wrapper">
                    {% render 'responsive-picture', class:'hero-banner-image', desktopImage:block.settings.desktop_image,
                    mobileImage:block.settings.mobile_image %}
                </div>
                <div class="hero-content-wrapper position-abs {{block.settings.text_alignment}} hero-content-flex-wrap">
                    <div class="hero-content">
                        <h2 class="heading">{{block.settings.heading}}</h2>
                        <div class="description">{{block.settings.description}}</div>
            
                        <a href="{{block.settings.button_link}}">
            
                            <button class="hero-banner-button">
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                        <path fill-rule="evenodd" clip-rule="evenodd"
                                            d="M10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18ZM9.5547 7.16795C9.24784 6.96338 8.8533 6.94431 8.52814 7.11833C8.20298 7.29235 8 7.63121 8 8V12C8 12.3688 8.20298 12.7077 8.52814 12.8817C8.8533 13.0557 9.24784 13.0366 9.5547 12.8321L12.5547 10.8321C12.8329 10.6466 13 10.3344 13 10C13 9.66565 12.8329 9.35342 12.5547 9.16795L9.5547 7.16795Z"
                                            fill="white" />
                                    </svg>
                                </span><span class="hero-banner-button-text">{{block.settings.button_text}}</span></button>
                        </a>
            
                    </div>
                </div>
            </div>
            {% endfor %}
        </ul>
    </div>
</section>

    
</div>
<script>
    new Splide('.splide',{
        type:"loop",
        autoplay:true,
        interval:3000,

    }).mount();
</script>


{% schema %}
    {
        "name":"Hero-Banner",
        "tag":"section",
        "class":"hero-banner",
        "settings":[
            {
                "type":"select",
                "id":"layout",
                "label":"Layout",
                "options":[
                    {
                        "value":"full-width", "label":"Full width"
                        },
                    {
                        "value": "page-width", "label":"Grid" 
                    }
                ],
                "default":"page-width"
            },
            {
                "type": "select",
                "id":"slide_height",
                "label":"Slide height",
                "options": [
                    {
                        "value":"adapt to first image", "label":"Adapt to first image"
                    },
                    {
                        "value":"small","label":"Small"
                    },
                    {"value": "medium","label":"Medium"},
                    {"value": "large","label":"Large"}
                ]
            },
            {
                "type": "select",
                "id": "pagination_style",
                "label": "Pagination style",
                "options": [
                    {
                        "value":"dots","label":"Dots"
                    },
                    {
                        "value": "counter","label":"Counter"
                    },
                    {"value": "number","label":"Number"}
                ]
            },
            {
                "type": "checkbox",
                "id": "auto_rotate_slides",
                "label": "Auto-rotate slides"
            },
            {
                "type":"range",
                "id": "change_slides_timing",
                "label": "Change slides every",
                "min": 3,
                "max": 9,
                "step": 1,
                "unit": "sec",
                "default": 5
            },
            {
            "type": "header",
            "content": "Animations"
             },
             {
                "type": "select",
                "id": "image_behaviour",
                "label": "Image Behaviour",
                "options": [
                    {
                        "value": "none", "label":"None"
                    },
                    {
                        "value": "ambient movement","label":"Ambient Movement"
                    }
                ]
             }
     
        ],
    "blocks": [
        
    {
    "type":"heading",
    "name":"hero-banner-block",
    "settings":[
    {
    "type":"image_picker",
    "id":"desktop_image",
    "label":"Desktop Image"
    },
    {
    "type":"image_picker",
    "id":"mobile_image",
    "label":"Mobile Image"
    },
    {
    "type":"text",
    "id":"heading",
    "label":"Heading",
    "placeholder":"Enter your heading title",
    "default":"John Wick 3 : Parabellum"
    },
    {
    "type": "color",
    "id":"heading_text_color",
    "label":"Heading Text Color",
    "default":"#ffffff"
    },
    
    {
    "type":"richtext",
    "id":"description",
    "label":"Description",
    "default":"<p>John Wick is on the run after killing a member of the international assassins' guild, and with a $14 million price tag on his head, he is the target of hit men and women everywhere.</p>"
    },
    {
    "type": "color",
    "id":"description_text_color",
    "label":"Description Text Color",
    "default":"#ffffff"
    },
    {
    "type":"url",
    "id":"button_link",
    "label":"Button Link",
    "default":"/collections"
    },
    {
    "type":"text",
    "id":"button_text",
    "label":"Button Text",
    "default":"Watch Trailer"
    },
    {
    "type":"color",
    "id":"button_bg",
    "label":"Button Background Color",
    "default":"#BE123C"
    },
    {
    "type":"color",
    "id":"button_text_color",
    "label":"Button Text Color",
    "default":"#FFFFFF"
    },
    {
    "type": "select",
    "label": "Text Alignment",
    "id": "text_alignment",
    "options": [
    { "value": "top-left", "label": "Top-Left" },
    { "value": "top-center", "label": "Top-Center" },
    { "value": "top-right", "label": "Top-Right" },
    { "value": "center-left", "label": "Center-Left"},
    { "value": "center", "label": "Center"},
    { "value": "center-right", "label": "Center-Right"},
    { "value": "bottom-left", "label": "Bottom-Left"},
    { "value": "bottom-center", "label": "Bottom-Center"},
    { "value": "bottom-right", "label": "Bottom-Right"}
    ],
    "default": "center"
    }

    ]
        }
           
        ],"presets": [{
        "name": "Hero Banner Block"
        }]
        

    }
{% endschema %}